<%- include("../public/partials/nav") %> 
<%- include("../public/partials/header") %>

<div class="container mt-5">
    <h3 class="my-3">Join our Authors </h3>
    <form action="/register" method="POST">
        <input type="text" name="first_name" placeholder="First name" class="form-control" required>
        <input type="text" name="last_name" placeholder="Last name" class="mt-3 form-control" required>
        <input type="text" name="username" placeholder="Username" class="mt-3 form-control" required>
        <input type="email" name="email" placeholder="Email" class="mt-3 form-control" required>
        <input type="password" name="password" placeholder="Password" class="mt-3 form-control" required>
        <input type="submit" value="SIGN UP" class="mt-5 btn btn-md btn-danger">
    </form>

    
</div>
<div class="container mt-5">
    <p>Already a member?</p>
    <a href=" /login" class="btn btn-primary">Log in</a>
</div>

